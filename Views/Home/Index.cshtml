<section id="contact" class="contact-section">
    <div class="container">
        <h2 class="section-title">Get in Touch</h2>
        <div class="row">
            <div class="col-md-6">
                <div class="contact-info">
                    <h3>Contact Information</h3>
                    <ul class="contact-list">
                        <li><i class="fas fa-map-marker-alt"></i> Cama Estate, Goregaon East, Mumbai-400063</li>
                        <li><i class="fas fa-envelope"></i> <a href="mailto:satendray019@gmail.com">satendray019@gmail.com</a></li>
                        <li><i class="fas fa-phone"></i> <a href="tel:+919653156115">+91 9653156115</a></li>
                    </ul>
                </div>
            </div>
            <div class="col-md-6">
                <div class="contact-form">
                    <h3>Contact Form</h3>
                    <form method="post" asp-action="Index">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <input type="text" asp-for="Name" class="form-control" id="name" placeholder="Your Name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="text" asp-for="Mobilenum" class="form-control" id="mobile" placeholder="Your Mobile Number" />
                            <span asp-validation-for="Mobilenum" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="email" asp-for="Email" class="form-control" id="email" placeholder="Your Email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <textarea class="form-control" asp-for="Message" id="message" rows="4" placeholder="Your Message"></textarea>
                            <span asp-validation-for="Message" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Send Message</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <br />
</section>
