<section id="skills" class="skills-section">
    <div class="container">
        <h2 class="section-title">Skills</h2>
        <ul class="skill-list">
            <li class="skill-item">
                <div class="skill-icon">
                    <i class="fas fa-laptop-code"></i>
                </div>
                <h3 class="skill-name">Web Development</h3>
                <p class="skill-description">Crafting stunning and responsive web experiences using the latest technologies.</p>
            </li>
            <li class="skill-item">
                <div class="skill-icon">
                    <i class="fas fa-palette"></i>
                </div>
                <h3 class="skill-name">Graphic Design</h3>
                <p class="skill-description">Bringing ideas to life through visually appealing and impactful designs.</p>
            </li>
            <li class="skill-item">
                <div class="skill-icon">
                    <i class="fas fa-bullhorn"></i>
                </div>
                <h3 class="skill-name">Digital Marketing</h3>
                <p class="skill-description">Driving online success with strategic digital marketing campaigns.</p>
            </li>
        </ul>
    </div>
</section>

<section id="contact" class="contact-section">
    <div class="container">
        <h2 class="section-title">Contact Us</h2>
        <div class="row">
            <div class="col-md-6">
                <div class="contact-info">
                    <h3>Contact Information</h3>
                    <p><i class="fas fa-map-marker-alt"></i> Cama Estate, Goregaon East, Mumbai-400063</p>
                    <p><i class="fas fa-envelope"></i> satendray019@example.com</p>
                    <p><i class="fas fa-phone"></i> +91 9653156115</p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="contact-form">
                    <h3>Contact Form</h3>
                    <form>
                        <div class="form-group">
                            <label for="name">Name</label>
                            <input type="text" class="form-control" id="name" placeholder="Your Name">
                        </div>
                        <div class="form-group">
                            <label for="mobile">Mobile Number</label>
                            <input type="text" class="form-control" id="mobile" placeholder="Your Mobile Number">
                        </div>
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" class="form-control" id="email" placeholder="Your Email">
                        </div>
                        <div class="form-group">
                            <label for="message">Message</label>
                            <textarea class="form-control" id="message" rows="4" placeholder="Your Message"></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Send Message</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <br />
</section>

